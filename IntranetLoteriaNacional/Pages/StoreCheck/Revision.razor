                            <PhTableColumnHeaders>
                                <PhTableColumn Style="width:30%;" Value="Nombre Zona" IsHeader="true" />
                                <PhTableColumn Style="width:50%;" Value="Nombre PDS" IsHeader="true" />
                                <PhTableColumn Style="width:20%;" Value="Cuestionarios Revisados" IsHeader="true" />
                            </PhTableColumnHeaders>
                            <PhTableColumnValues>
                                <PhTableColumn Value="@context.nombreZona" Style="width:30%;text-align:center;vertical-align:middle;" />
                                <PhTableColumn Value="@context.nombrePDS" Style="width:50%;" />
                                <PhTableColumn Value="@Convert.ToString(context.CuestionariosNovedades)" Style="width:20%;" />
                            </PhTableColumnValues>
                            <PhTableActions>
                                <PhButton Type="ButtonType.Primary" @onclick="@(() => VerRevisadosxPDS(context))" Size="ButtonSize.Small" Text="Ver Cuestionarios" />
                            </PhTableActions>
                        </PhTable>
                        <PhModal @ref="modalCuestionariosRevisadosxPDS">
                            <Title>Cuestionarios Revisados PDS: @nombrePDSRevisado</Title>
                            <Body>
                                <div class="form-group row" style="margin-bottom:2%;">
                                    <label for="det" class="col-sm-2 col-form-label col-form-label-lg">Fecha desde</label>
                                    <div class="col-sm-3">
                                        <label class="form-control" style="text-align:left">@Convert.ToDateTime(fechaDesde).ToString("yyyy-MM-dd")</label>
                                    </div>
                                    <label for="det" class="col-sm-2 col-form-label col-form-label-lg">Fecha hasta</label>
                                    <div class="col-sm-3">
                                        <label class="form-control" style="text-align:left">@Convert.ToDateTime(fechaHasta).ToString("yyyy-MM-dd")</label>
                                    </div>
                                </div>
