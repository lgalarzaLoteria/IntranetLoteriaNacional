                                    <PhTableColumnHeaders>
                                        <PhTableColumn Style="width:30%;" Value="Cuestionario" IsHeader="true" />
                                        <PhTableColumn Style="width:20%;" Value="% Cumplimiento" IsHeader="true" />
                                    </PhTableColumnHeaders>
                                    <PhTableColumnValues>
                                        <PhTableColumn Value="@Convert.ToString(context.codigoFormulario)" Style="width:30%;text-align:center;vertical-align:middle;" />
                                        <PhTableColumn Value="@Convert.ToString(context.porcentajeCumplimiento)" Style="width:20%;" />
                                    </PhTableColumnValues>
                                    <PhTableActions>
                                        <PhButton Type="ButtonType.Primary" @onclick="@(() => VerInforme(context))" Size="ButtonSize.Small" Text="Ver Informe" />
                                    </PhTableActions>
                                </PhTable>
                                <PhModal @ref="modalInformeSupervisor">
                                    <Title>Informe Supervisor</Title>
                                    <Body>
                                        <iframe src="@PdfBase64" width="800" height="800" frameborder="0"></iframe>
                                    </Body>
                                    <Footer>
                                        <PhButton Type="ButtonType.Danger" @onclick="() => modalInformeSupervisor.CloseModal()" Size="ButtonSize.Small" Text="Cerrar" />
                                    </Footer>
                                </PhModal>
                            </Body>
                            <Footer>
                                <PhButton Type="ButtonType.Danger" @onclick="() => modalCuestionariosRevisadosxPDS.CloseModal()" Size="ButtonSize.Small" Text="Cerrar" />
                            </Footer>
                        </PhModal>
                    </Body>
                    <Footer>
                        <PhButton Type="ButtonType.Danger" @onclick="() => modalCuestionariosRevisados.CloseModal()" Size="ButtonSize.Small" Text="Cerrar" />
                    </Footer>
                </PhModal>
            </div>
            <div class="col-md-6 col-sm-12" style="text-align: center">
                <PhButton Type="ButtonType.Primary" OnClick="VerRanking" Size="ButtonSize.Medium" Text="Ver Ranking" />
                <PhModal @ref="modalRankingxPDS">
                    <Title>Ranking de Cumplimento de PDS</Title>
                    <Body>
                        <div class="form-group row">
                            <label for="det" class="col-sm-2 col-form-label">Fecha desde</label>
                            <div class="col-sm-2">
                                <input type="date" class="form-control rounded" id="fechaDesde" @bind-value="@fechaDesde" pattern="\d{4}/\d{2}/\d{2}" />
                            </div>
                            <label for="det" class="col-sm-2 col-form-label">Fecha hasta</label>
                            <div class="col-sm-2">
                                <input type="date" class="form-control rounded" id="fechaHasta" @bind-value="@fechaHasta" pattern="\d{4}/\d{2}/\d{2}" />
                            </div>
                            <div class="col-sm-2">
                                <PhButton Type="ButtonType.Primary" OnClick="VerRankingxFecha" Size="ButtonSize.Medium" Text="Consultar" />
                            </div>
                        </div>
                        <PhTable @ref="_tableRankingPDS" TPost="RegistroFormularioDTO" isSearcheable="false" TReturn="RankingCumplimientoPDSDTO" Body="@rankingPDS" EndPoint="@EndPointObtieneRankingPDS" idTable="table_RankingPDS">
                            <PhTableColumnHeaders>
                                <PhTableColumn Style="width:30%;" Value="% Cumplimiento" IsHeader="true" />
                                <PhTableColumn Style="width:20%;" Value="Cantidad PDS" IsHeader="true" />
                            </PhTableColumnHeaders>
                            <PhTableColumnValues>
                                <PhTableColumn Value="@Convert.ToString(context.leyendaRango)" Style="width:30%;text-align:center;vertical-align:middle;" />
                                <PhTableColumn Value="@Convert.ToString(context.cantidadPDS)" Style="width:20%;" />
                            </PhTableColumnValues>
                            <PhTableActions>
                                <PhButton Type="ButtonType.Primary" @onclick="@(() => VerRankingxGrupo(context))" Size="ButtonSize.Small" Text="Ver PDS" />
                            </PhTableActions>
                        </PhTable>
                        <PhModal @ref="modalPdsRango">
                            <Title>PDS por Rango de Cumplimiento</Title>
                            <Body>
                                <PhTable @ref="_tablePDS" TPost="RankingCumplimientoPDSInfo" isSearcheable="false" isRefresh="false" TReturn="RankingPDSInfo" Body="@pdsRango" EndPoint="@EndPointPDSPorRango">
                                    <PhTableColumnHeaders>
                                        <PhTableColumn Style="width:20%;" Value="PDS" IsHeader="true" />
                                        <PhTableColumn Style="width:20%;" Value="Porcentaje de Cumplimiento" IsHeader="true" />
                                    </PhTableColumnHeaders>
                                    <PhTableColumnValues>
                                        <PhTableColumn Value="@context.nombrePDS" Style="width:20%;" />
                                        <PhTableColumn Value="@context.porcentajeCumplimiento.ToString()" Style="width:20%;" />
                                    </PhTableColumnValues>
                                </PhTable>
                            </Body>
                            <Footer>
                                <PhButton Type="ButtonType.Danger" @onclick="() => modalPdsRango.CloseModal()" Size="ButtonSize.Small" Text="Cerrar" />
                            </Footer>
                        </PhModal>
                    </Body>
                    <Footer>
                        <PhButton Type="ButtonType.Danger" @onclick="() => modalRankingxPDS.CloseModal()" Size="ButtonSize.Small" Text="Cerrar" />
                    </Footer>
                </PhModal>
            </div>
        </div>
    </div>
    <div>
        <PhConfirmacion @ref="modalConfirmacion" onClickCancel="CancelConfirm" title="Confirmación" content="¿Está seguro de guardar el cuestionario?" OnClickExec="sendData">
        </PhConfirmacion>
    </div>
    <Loading @ref="loader"></Loading>
</article>

