                        <Series Name="Cuestionarios Revisados" Binding="CuestionariosNovedades" />
                    </SeriesCollection>
                </FlexChart>
            </div>
            <div class="col-md-6 col-sm-12">
                <FlexChart Class="chart" ChartType="C1.Chart.ChartType.Funnel" BindingX="cantidadPDS" ItemsSource="dataRankingPDS"
