<style>
    body {
        background: gray;
    }
    .modal {
        /* ... */
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }



    .modal-confirm {
        color: #434e65;
    }

        .modal-confirm .modal-content {
            padding: 20px;
            font-size: 16px;
            border-radius: 5px;
            border: none;
        }

        .modal-confirm .modal-header {
            background-color: var(--ph-skyblue);
            border-bottom: none;
            position: relative;
            text-align: center;
            margin: -20px -20px 0;
            border-radius: 5px 5px 0 0;
            padding: 35px;
        }

        .modal-confirm h4 {
            text-align: center;
            font-size: 36px;
            margin: 10px 0;
        }

        .modal-confirm .form-control, .modal-confirm .btn {
            min-height: 40px;
            border-radius: 3px;
        }

        .modal-confirm .close {
            position: absolute;
            top: 15px;
            right: 15px;
            color: #fff;
            text-shadow: none;
            /*opacity: 0.5;*/
        }

            .modal-confirm .close:hover {
                /*opacity: 0.8;*/
                background-color: var(--ph-skyblue);
            }

        .modal-confirm .icon-box {
            color: #fff;
            width: 95px;
            height: 95px;
            display: inline-block;
            border-radius: 50%;
            z-index: 9;
            border: 5px solid #fff;
            padding: 15px;
            text-align: center;
        }

            .modal-confirm .icon-box i {
                font-size: 64px;
                margin: -4px 0 0 -4px;
            }

        .modal-confirm.modal-dialog {
            margin-top: 80px;
        }
        .modal-dialog-phar {
            width: 80%;
        }
        .modal-confirm .btn, .modal-confirm .btn:active {
            color: #fff;
            border-radius: 4px;
            /*background: #eeb711 !important;*/
            text-decoration: none;
            transition: all 0.4s;
            line-height: normal;
            border-radius: 30px;
            /*margin-top: 10px;*/
            /*padding: 6px 20px;*/
            /*border: none;*/
        }

            .modal-confirm .btn:hover, .modal-confirm .btn:focus {
                /*background: #eda645 !important;*/
                outline: none;
                color: skyblue;
            }

            .modal-confirm .btn span {
                margin: 1px 3px 0;
                float: left;
            }

            .modal-confirm .btn i {
                margin-left: 1px;
                font-size: 20px;
                float: right;
            }

    
</style>
<div class="modal fade @modalClass" tabindex="-1" role="dialog" style="display:@modalDisplay;z-index: @index;">
    <div class="modal-dialog modal-lg modal-dialog-phar" style="max-width: @maxwidth;" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:var(--ph-skyblue)">
                @if (isDivTitle == null)
                {
                    <h3 class="modal-title" style="color:white">@*@accion*@ @Title</h3>
                }
                else
                {
                    @Title
                }
                <button type="button" style="color:black; border:0;" class="close btn btn-outline-danger" data-dismiss="modal" onclick="@CloseModal" aria-hidden="true" title="Cerrar">
                    <i class="fa fa-xmark" aria-hidden="true" style="font-size:30px;"></i>
                </button>
            </div>
            <div style="max-height: 550px;margin: 10px;overflow:auto">
                @Body
            </div>
            <div class="modal-footer">
                @Footer
            </div>
        </div>
    </div>
</div>

@if (showBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter]
    public RenderFragment ?Title { get; set; }

    [Parameter]
    public RenderFragment ?Body { get; set; }

    [Parameter]
    public RenderFragment ?Footer { get; set; }

    [Parameter]
    public string? index { get; set; } = "999";

    [Parameter]
    public string? maxwidth { get; set; } = "60%";

    [Parameter]
    public bool? isDivTitle { get; set; }

    [Parameter]
    public string? cssTitle { get; set; }

    private string modalDisplay = "none;";
    private string modalClass = "";
    private bool showBackdrop = false;
    private string accion = "";

    public async Task NewModal()
    {
        accion = "Agregar";
        modalDisplay = "flow-root;";
        await Task.Delay(100);
        modalClass = "show";
        StateHasChanged();
    }
    public async Task UpdateModal()
    {
        accion = "Actualizar";
        modalDisplay = "flow-root;";
        await Task.Delay(100);
        modalClass = "show";
        StateHasChanged();
    }

    public async Task ViewDetailModal()
    {
        accion = "Ver";
        modalDisplay = "flow-root;";
        await Task.Delay(100);
        modalClass = "show";
        StateHasChanged();
    }

    public async Task CloseModal()
    {
        modalClass = "";
        await Task.Delay(100);
        modalDisplay = "none;";
        StateHasChanged();
    }

    public async Task UpdateItems()
    {
        StateHasChanged();
    }

